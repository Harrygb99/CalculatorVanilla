  <script>
    // PreÃ§os dos itens baseados na sua lista (R$ 1,500 = 1500)
    const precosItens = {
      CAMISINHA: 1500,
      LINGERIE: 1500,
      VIBRADOR: 2500,
      LUBRIFICANTE: 2000,
      CHICOTE: 1850
    };

    // Porcentagens de distribuiÃ§Ã£o
    const porcentagens = {
        CLIENTE: 0.85, // 85%
        VANILLA: 0.10, // 10%
        LAVADOR: 0.05  // 5%
    };

    function formatCurrency(value) {
      // Formata como moeda brasileira, mas com 0 casas decimais para manter a clareza do R$ 1500,00
      return value.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL', minimumFractionDigits: 2 });
    }

    function calcular() {
      const form = document.forms["calcForm"];
      let total = 0;
      
      // 1. Calcula o total das vendas
      for (const item in precosItens) {
        const input = form[item];
        const qtd = parseInt(input ? input.value : '0') || 0;
        total += precosItens[item] * qtd;
      }
      
      // 2. Calcula a distribuiÃ§Ã£o de porcentagem
      const valorCliente = total * porcentagens.CLIENTE;
      const valorVanilla = total * porcentagens.VANILLA;
      const valorLavador = total * porcentagens.LAVADOR;

      // 3. Monta o resultado
      const resultadoHTML = `
        <div class="total-value">
            <strong>TOTAL DE VENDAS: ${formatCurrency(total)}</strong>
        </div>
        <h2>ðŸ’° DistribuiÃ§Ã£o do Valor:</h2>
        <div class="breakdown">
            <p><strong>Cliente (85%):</strong> ${formatCurrency(valorCliente)}</p>
            <p><strong>Vanilla (10%):</strong> ${formatCurrency(valorVanilla)}</p>
            <p><strong>Lavador (5%):</strong> ${formatCurrency(valorLavador)}</p>
        </div>
      `;

      document.getElementById("resultado").innerHTML = resultadoHTML;
    }

    function resetar() {
      const form = document.forms["calcForm"];
      
      // Reseta inputs de quantidade
      for (const input of form.querySelectorAll('input[type="number"]')) input.value = 0;
      
      document.getElementById("resultado").innerHTML = "";
    }
  </script>
